PKG_CFLAGS = @PKG_CFLAGS@
PKG_LIBS = @PKG_LIBS@

SOURCES = changes.c cursors.c document.c errors.c init.c memory.c objects.c sync.c
OBJECTS = $(SOURCES:.c=.o)

.PHONY: all cleanup clean

all: cleanup

cleanup: $(SHLIB)
	@rm -rf automerge/rust/vendor ../am-build ../am-install

$(SHLIB): $(OBJECTS)

clean:
	rm -f $(OBJECTS) $(SHLIB)
